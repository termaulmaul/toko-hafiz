# Toko Hafiz - Environment Configuration for XAMPP
# Copy this to .env file

# Database Configuration (XAMPP)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=db_toko_hafiz_simple
DB_SOCKET=/Applications/XAMPP/xamppfiles/var/mysql/mysql.sock

# Server Configuration
PORT=3000
NODE_ENV=development

# Security (for development)
JWT_SECRET=toko_hafiz_jwt_secret_key_2024
SESSION_SECRET=toko_hafiz_session_secret_2024

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=1048576

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log